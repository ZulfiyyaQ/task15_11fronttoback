@model List<Size>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Size</h4>
                        <p class="card-description">
                            <a class="btn-sm btn btn-success" asp-action="create" asp-controller="sizes">
                                <strong class="mdi mdi-file-outline"> Create</strong>
                            </a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Product Count
                                        </th>
                                        <th>
                                            Settings
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Size item in Model)
                                    {
                                        count++;
                                        <tr>

                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.ProductSizes.Count
                                            </td>
                                            <td>
                                                <a class="btn-sm btn btn-warning" asp-route-id="@item.Id" asp-action="update" asp-controller="sizes">

                                                    <i class="mdi mdi-auto-fix"></i>
                                                </a>
                                                <a class="btn-sm btn btn-danger" asp-route-id="@item.Id" asp-action="delete" asp-controller="sizes">
                                                    <i class="mdi mdi-delete-variant"></i>
                                                </a>
                                                <a class="btn-sm btn btn-primary" asp-route-id="@item.Id" asp-action="detail" asp-controller="sizes">
                                                    <i class="mdi mdi-book-open-page-variant"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

