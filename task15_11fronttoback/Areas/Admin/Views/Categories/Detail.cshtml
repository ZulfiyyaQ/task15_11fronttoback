@model Category




<div class="card">
    <h5 class="card-header">Category</h5>
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (Product item in Model.Products)
            {
                <div class="col">
                    <div class="card">
                        <img src="~/assets/images/website-images/@item.ProductImages.FirstOrDefault(img => img.ProductId == item.Id && img.IsPrimary == true).Url" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-text">@item.Description</h6>
                            <p class="card-text">Price: $@item.Price</p>
                            <p class="card-text">SKU: @item.SKU</p>
                            
                        </div>
                    </div>
                </div>
            }
        </div>
        
    </div>
</div>

