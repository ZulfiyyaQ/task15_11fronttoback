@model Product

<div class="container">
    <h5 class="card-header">Product Details</h5>
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <div class="col">
                <div class="card">
                    <img src="~/assets/images/website-images/@Model.ProductImages.FirstOrDefault( img=>img.IsPrimary == true)?.Url" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <h6 class="card-text">@Model.Description</h6>
                        <p class="card-text">Price: $@Model.Price</p>
                        <p class="card-text">SKU: @Model.SKU</p>
                        <p>
                            @foreach (var item in Model.ProductTags)
                            {
                                @item.Tag.Name
                            }
                        </p>
                        <p>
                            @foreach (var item in Model.ProductColors)
                            {
                               @item.Color.Name
                            }
                        </p>
                        <p>
                            @foreach (var item in Model.ProductSizes)
                            {
                                @item.Size.Name
                            }
                        </p>
                        
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

